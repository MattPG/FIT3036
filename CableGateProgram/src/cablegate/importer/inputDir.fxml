<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Label fx:id="outlineLabel" prefHeight="150.0" prefWidth="600.0" text="This utility allows you to import the cables.csv file. No error checking of the input directory or filetype is made so please ensure it is correct.&#10;&#10;Enter the full system directory with filename, for example:&#10;C://Program Files/Cables/cable.csv" wrapText="true" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </padding>
      </Label>
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="inputPromptLabel" text="Cables csv directory:" textOverrun="WORD_ELLIPSIS" />
            <TextField fx:id="directoryField" prefHeight="25.0" prefWidth="300.0" promptText="Insert directory here..." />
         </children>
         <BorderPane.margin>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </BorderPane.margin>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="200.0" spacing="12.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="25.0" left="12.0" right="30.0" top="25.0" />
         </padding>
         <children>
            <Button fx:id="importButton" mnemonicParsing="false" text="Import" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
